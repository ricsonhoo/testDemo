/* pages/edit/edit.wxss */
page{background-color: #f6f7f8;}
.rui-form-li-name{
  width: 50px;
  text-align: justify;
  margin-right: 10px;
}
.rui-form-li-name::after{
  content: '';
  display: inline-block; 
  padding-left: 100%;
}
.rui-form-li-input{position: relative;}
.rui-edit-code{
  position: absolute;
  top: 0;
  right: 0;
  height: 40px;
  line-height: 40px;
  background-color: #fff;
  z-index: 10px;
  width: 70px;
  text-align: center;
  border-left: 1px solid #e7e7e7;
  color: #333333;
}
.rui-form-li-input{
  border:1px solid #e7e7e7;
  height: 40px;
  overflow: hidden;
  padding-left: 0;
  background-color: #f6f7f8;
  border-radius: 3px;
}
.rui-form-li-input input,.rui-form-li-input picker{
  box-sizing: border-box;
  border-color: #f6f7f8;
  border-radius: 0;
  margin: 0;
  display: block;
  height: 40px;
  line-height: 40px;
}
.rui-form-photo{
  float: right;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
  color: #333;
  border: 1px solid #e7e7e7;
  font-size: 3.5vw;
  padding: 0 2vw;
}
.rui-form-photo:last-child{
  border-radius: 3px 0 0 3px;
  border-right: none;
}